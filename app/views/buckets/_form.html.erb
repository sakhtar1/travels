

<% if @bucket.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@bucket.errors.count, "error") %>
      prohibited this bucket list from being saved:
    </h2>
 
    <ul>
    <% @bucket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @bucket do |f| %>
<div>
  <%= f.label :'Continent:' %>
  <br>
  <%= f.text_field :continent %>
  <br>
  <br>
  <%= f.label :'Country:' %>
  <br>
  <%= f.text_field :country %>
  <br>
  <br>
   <%= f.label :'City:' %>
  <br>
  <%= f.text_field :city%>
  <br>
  <br>
  <%= f.label :'Description:' %>
  <br>
  <%= f.text_area :description %>
  <br>
  <br>
  <%= f.submit @bucket.persisted? ? "Update Bucket" : "Submit Bucket", :class => 'submit_now'%>
</div>
<% end %>