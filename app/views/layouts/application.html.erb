<!DOCTYPE html>
<html>
  <head>
    <title>TravelDoor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <a class="navbar-brand" href="/">Travel Door</a>
           <%= image_tag("https://png.icons8.com/office/16/000000/globe.png") %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><a href="/continents"> Continents </a></li>
              <li><a href="/countries"> Countries </a></li>
              <li><a href="/settings">Account Settings</a></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %>
            <%end %>
            <% if !user_signed_in? %>
              <li><a href="/users/sign_up"> Sign Up </a></li>   
              <li> <a href="/users/sign_in"> Log In </a></li>
              <li><%= link_to(image_tag("https://png.icons8.com/color/50/000000/google-logo.png"),user_google_oauth2_omniauth_authorize_path) %></li>
            <% end %>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
 

 
    <div class="container">

      <%=yield%>
      <br>
      <br>
      
      <h5 class="notice"><%= notice %></h5>
      <h5 class="alert"><%= alert %></h5>
    </div>
   <footer class="footer">
      <div class="container">
        <h6 class="text-muted">Travel Door. All rights reserved. SA. Â© 2018</h6>

        
      </div>
    </footer>
  </body>

</html>
