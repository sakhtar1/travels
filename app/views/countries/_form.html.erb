<% if @country.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@country.errors.count, "error") %>
      prohibited this country from being saved:
    </h2>
 
    <ul>
    <% @country.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @country do |f| %>
<div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.label :'What continent did you visit?' %>
  <br>
  <%= f.text_field :continent %>
  <br>
  <br>
  <%= f.label :'Which country did you travel to?' %>
  <br>
  <%= f.text_field :name %>
  <br>
  <br>
   <%= f.label :'What are some cities you went to?' %>
  <br>
  <%= f.text_field :city%>
  <br>
  <br>
  <%= f.label :Description %>
  <br>
  <%= f.text_area :description %>
  <br>
  <br>
  <%= f.submit "Submit" %>
</div>
<% end %>

 

